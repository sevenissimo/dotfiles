# sed.nanorc
# syntax for SED files
#

syntax "SED" "\.sed$"
header "^#!.*bin/(env +)?sed( |$)"


# Operators
color red  "[|^$.*+]"
color cyan "\{[0-9]+,?[0-9]*\}"

# Special characters
color magenta "\\."

# Comments
color white "(^|[[:space:]])#([^{].*)?$"

# Spacing errors
color ,yellow "[[:space:]]+$"
color ,yellow "	+ +| +	+"

# Extras
color brightwhite,yellow "TODO:?"
